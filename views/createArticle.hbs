<link rel="stylesheet" href="/stylesheets/admin.css" />

<div class="container">
  <div class="row">
    <form action="/courses/course/create" method="POST">
      <div class="input-field col s6">
        <label for="name">Maqola Nomi</label>

        <input
          placeholder="Placeholder"
          id="name"
          type="text"
          class="validate"
          name="name"
        />
      </div>
      <div class="input-field col s6">
        <label for="text">Maqola matni</label>
        <textarea
          id="text"
          type="text"
          class="validate"
          name="image"
        ></textarea>
      </div>

      <button class="waves-effect waves-light btn" type="submit">Create course</button>

      <select name="categoryId" class="browser-default">
        <option value="">Select Category</option>
        {{#each categories}}
          <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>

    </form>
  </div>
</div>